#!/bin/sh
set -e

UDEV_RULES=/etc/udev/rules.d/99-logitech-hidpp.rules

ACTION=$1

if [ "$ACTION" = "purge" -a -e /usr/share/debconf/confmodule ]; then
    . /usr/share/debconf/confmodule
    db_purge
fi

#DEBHELPER#

case "$ACTION" in
    purge)
        rm -f "$UDEV_RULES" >/dev/null 2>&1
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade)
        ;;
esac
